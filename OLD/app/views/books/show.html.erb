<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @book.title %>
</p>

<p>
  <b>Author:</b>
  <%= @book.author %>
</p>

<p>
  <b>Pub date:</b>
  <%= @book.pub_date %>
</p>

<p>
  <b>Isbn:</b>
  <%= @book.ISBN %>
</p>

<p>
  <b>Description:</b>
  <%= @book.description %>
</p>

<p>
	<b>Cover:</b>
	<% if @book.has_cover? %>
		<%= image_tag @book.cover_path %>
	<% else %>
		No cover image for this book has been uploaded.
	<% end %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
